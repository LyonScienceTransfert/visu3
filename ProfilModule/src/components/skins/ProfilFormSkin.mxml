<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("components.skins.ProfilForm")]
    </fx:Metadata>
    <s:VGroup height="100%" width="100%" gap="20">
        <s:HGroup width="100%"  verticalAlign="middle" gap="20">
            <mx:Image id="userAvatar" width="100" height="100"/>
            <s:VGroup width="100%" horizontalAlign="left" >
                <s:Label id="userFirstName"/>
                <s:Label id="userLastName"/>
            </s:VGroup>
        </s:HGroup>
        <s:Line width="100%">
            <s:stroke>
                <s:SolidColorStroke color="#cccccc" weight="1" joints="miter"/>
            </s:stroke>
        </s:Line>
        <s:HGroup width="100%"  gap="20" verticalAlign="top">
            <s:VGroup height="100%" horizontalAlign="right" verticalAlign="middle" width="50%" gap="20">
                <s:Label id="userMailLoginInfo" text="mail/pass :"/>
                <s:Label id="userRoleInfo" text="Role :"/>
                <s:Label id="userPassInfo" text="password :"/>
            </s:VGroup>
            <s:VGroup height="100%" horizontalAlign="left" verticalAlign="middle" width="50%" gap="20">
                <s:Label id="userMailLogin" text="serguei@mail.ru"/>
                <s:Label id="userRole" text="tuteur"/>
                <s:Button id="userPassUpdate" label="set new password" height="16"/>
            </s:VGroup>
        </s:HGroup>
    </s:VGroup>
</s:Skin>
