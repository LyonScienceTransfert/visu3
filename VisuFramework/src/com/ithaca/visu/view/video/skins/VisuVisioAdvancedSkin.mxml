<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:layouts="com.ithaca.visu.view.video.layouts.*"
        creationComplete="skin1_creationCompleteHandler(event)"
        currentStateChange="skin1_currentStateChangeHandler(event)">
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.view.video.VisuVisioAdvanced")]
	</fx:Metadata>

    <fx:Script>
    <![CDATA[
        import mx.events.FlexEvent;
        import mx.events.StateChangeEvent;
        ////////////////////////////////////////////////////////
        // INFO : have to set focus, runtime error SDK 4.5    //
        ////////////////////////////////////////////////////////
        protected function skin1_creationCompleteHandler(event:FlexEvent):void
        {
           this.setFocus();
        }
        protected function skin1_currentStateChangeHandler(event:StateChangeEvent):void
        {
           this.setFocus();
        }
    ]]>
    </fx:Script>
	<s:Group width="100%" height="100%" id="groupVideoContener">
		<s:layout>
			<layouts:VideoLayout id="videoPanelLayout"/>
		</s:layout>
	</s:Group>
</s:Skin>
