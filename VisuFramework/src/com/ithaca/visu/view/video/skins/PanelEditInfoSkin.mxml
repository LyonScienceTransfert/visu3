<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	creationComplete="skin1_creationCompleteHandler(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.view.video.PanelEditInfo")]
	</fx:Metadata>
	<fx:Script>
	<![CDATA[
		import com.ithaca.visu.traces.TraceModel;
		import com.ithaca.visu.ui.utils.IconEnum;
		
		import mx.events.FlexEvent;
		
		protected function skin1_creationCompleteHandler(event:FlexEvent):void
		{
			textInfo.selectAll();
			stage.focus = textInfo;
		}

	]]>
	</fx:Script>

		<s:Group  width="100%">
			<s:Rect id="fill" radiusX="10"
				left="2" right="2" top="1" bottom="1">
				<s:fill>
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="0xFFFFFF" />
						<s:GradientEntry color="0xD8D8D8" />
					</s:LinearGradient>
				</s:fill>
			</s:Rect>
			<s:Rect id="border" radiusX="10"
				left="2" right="2" top="0" bottom="0">
				<s:stroke>
					<s:LinearGradientStroke rotation="90" weight="2">
						<s:GradientEntry color="0x000000" 
							alpha="0.5625"/>
						<s:GradientEntry color="0x000000" 
							alpha="0.75" />
					</s:LinearGradientStroke>
				</s:stroke>
			</s:Rect>
	<s:VGroup width="100%">
		<s:HGroup width="100%" paddingLeft="10" paddingTop="5" verticalAlign="middle" verticalCenter="0">
			<mx:Image  source="{IconEnum.getIconByTypeObsel(TraceModel.SET_MARKER)}"/>
			<s:Label fontWeight="bold">
				<s:text>Votre marquer sur : </s:text>
			</s:Label>				
		</s:HGroup>
		<s:HGroup width="100%" paddingLeft="10" verticalAlign="middle">
			<mx:Image id="imageUser" width="50" height="50"/>
			<s:Label  id="nameUser" text="Peta Darvin"/>
		</s:HGroup>
		<s:HGroup width="100%" paddingLeft="10" paddingRight="10">
			<s:TextArea  id="textInfo" width="100%" heightInLines="2" text="text de marquer ici"/>
		</s:HGroup>
		<s:HGroup width="100%" horizontalAlign="right" paddingRight="10" paddingBottom="5">
			<s:Button id="buttonOk">
				<s:label>Valider</s:label>
			</s:Button>
			<s:Button id="buttonCancel">
				<s:label>Annuler</s:label>
			</s:Button>
		</s:HGroup>
	</s:VGroup>
		</s:Group>
</s:Skin>
