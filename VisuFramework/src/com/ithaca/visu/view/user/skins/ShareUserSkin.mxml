<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
        creationComplete="skin1_creationCompleteHandler(event)" 
        currentStateChange="skin1_currentStateChangeHandler(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.view.user.ShareUser")]
	</fx:Metadata>
    <fx:Script>
    <![CDATA[
        import gnu.as3.gettext.FxGettext;
        import gnu.as3.gettext._FxGettext;
        
        import mx.events.FlexEvent;
        import mx.events.StateChangeEvent;
        
        [Bindable]
        private var fxgt: _FxGettext = FxGettext;
        
        protected function skin1_creationCompleteHandler(event:FlexEvent):void
        {
            // set focus, runtime error SDK 4.5
            this.setFocus();
            
            fxgt = FxGettext;
        }
        
        ////////////////////////////////////////////////////////
        // INFO : have to set focus, runtime error SDK 4.5    //
        ////////////////////////////////////////////////////////
        protected function skin1_currentStateChangeHandler(event:StateChangeEvent):void
        {
            this.setFocus();
        }
    ]]>
    </fx:Script>
	<s:Group width="100%">
		<s:layout>
			<s:VerticalLayout gap="4"/>
		</s:layout>
			<s:Group width="100%" height="26">

			<s:CheckBox id="checkBoxUser" left="7"  verticalCenter="0"/>
			<s:Label id="fistLastNameUser" left="25" right="7" maxDisplayedLines="1" verticalCenter="2"/>
		</s:Group>
	</s:Group>
</s:Skin>

