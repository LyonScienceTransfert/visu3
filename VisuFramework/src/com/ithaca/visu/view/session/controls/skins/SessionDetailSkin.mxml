<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:sessions="com.ithaca.visu.controls.sessions.*" xmlns:controls="com.ithaca.visu.view.session.controls.*" xmlns:datetime="com.visualempathy.display.controls.datetime.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.view.session.controls.SessionDetail")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.ithaca.visu.view.session.controls.event.SessionEditEvent;
			
			import mx.events.FlexEvent;
			
			protected function themeSession_focusOutHandler(event:FocusEvent):void
			{
				if(themeSession.text == ""){
					this.hostComponent.setMessageTheme();
				}else
				{
					this.hostComponent.updateTheme(themeSession.text);
				}
			}

			protected function themeSession_focusInHandler(event:FocusEvent):void
			{
				if(themeSession.text == "entrer un nouveau themè de la séance ici")
				{
					themeSession.text = "";
					themeSession.setStyle("fontStyle","normal");
					themeSession.setStyle("color","#000000");
				}
			}

			protected function descriptionSession_focusOutHandler(event:FocusEvent):void
			{
				if(descriptionSession.text == ""){
					this.hostComponent.setMessageDescription();
				}else
				{
					this.hostComponent.updateDescription(descriptionSession.text);
				}
			}

			protected function descriptionSession_focusInHandler(event:FocusEvent):void
			{
				if(descriptionSession.text == "entrer un nouveau description de la séance ici")
				{
					descriptionSession.text = "";
					descriptionSession.setStyle("fontStyle","normal");
					descriptionSession.setStyle("color","#000000");
				}
			}
			
			protected function picker_updateDateTimeHandler(event:SessionEditEvent):void
			{
				this.hostComponent.updateDateSession(this.picker.selectedDate);
			}

		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		<s:State name="normalEditable"/>
	</s:states>

	<s:Panel width="100%" height="100%" backgroundColor="#e4e4e4">
		<s:title>Détails de la séance</s:title>
		<s:VGroup gap="0" width="100%" height="100%" horizontalAlign="center">
			<s:Group height="160" width="100%">
				<s:HGroup width="100%" height="100%">
					<!-- LABELS -->
					<s:Group height="100%" width="20%">
						<s:Label right="5" fontWeight="bold" fontSize="14" top.disabled="10" right.normalEditable="5" verticalCenter.normalEditable="-3" right.normal="5" verticalCenter.normal="-3">
							<s:text>Théme :</s:text>
						</s:Label>
						<s:Label right="5" fontWeight="bold" fontSize="14" top.normalEditable="10" right.normalEditable="5" verticalCenter.disabled="-3" right.normal="5" top.normal="10">
							<s:text>Date du passassion :</s:text>
						</s:Label>
						<s:Label right="5" bottom="35" fontWeight="bold" fontSize="14">
							<s:text>Description :</s:text>
						</s:Label>
					</s:Group>
<!-- THEME -->	
					<s:Group height="100%" width="40%">
						<s:RichEditableText  id="themeSession" height="44" left="5" right="5" verticalCenter="0" backgroundColor="#FFFFFF"
											  focusOut="themeSession_focusOutHandler(event)"
											   focusIn="themeSession_focusInHandler(event)" textAlign.normalEditable="center" verticalAlign.normalEditable="middle" enabled.normalEditable="true" includeIn="disabled,normalEditable">
							<s:text>Les identités nationales</s:text>
						</s:RichEditableText>

<!-- DATE TIME -->	
						<datetime:DateTimePickerFR id="picker" minuteIncrement="5" top="5" 
												     updateDateTime="picker_updateDateTimeHandler(event)" includeIn="disabled,normalEditable"/>
						<s:RichEditableText  id="descriptionSession" height="44"  left="5" right="5"  bottom="5" backgroundColor="#FFFFFF"
											  focusOut="descriptionSession_focusOutHandler(event)"
											   focusIn="descriptionSession_focusInHandler(event)" fontStyle.normalEditable="italic" textAlign.normalEditable="center" verticalAlign.normalEditable="middle" includeIn="disabled,normalEditable">
							<s:text>in this session you will learn how you can go to other country..</s:text>
						</s:RichEditableText> 
						<s:RichText includeIn="normal" right="5" horizontalCenter="0" verticalCenter="0" left="5" height="44" verticalAlign="top" textAlign="center" id="themeSessionLabel" fontSize="14" paddingTop="5"/>
						<s:RichText includeIn="normal" right="5" bottom="5" left="5" height="44" verticalAlign="top" textAlign="center" id="descriptionSessionLabel" fontSize="14"/>
						<s:Group  includeIn="normal" left="0" top="5" height="22">
							<s:Label  id="dateLabel" verticalCenter="0" left="0" fontSize="14"/>
							<s:Label text="à" verticalCenter="0" left="75" fontSize="14"/>
							<s:Label  id="heurLabel" verticalCenter="0" left="90" fontSize="14"/>
							<s:Label text=":" verticalCenter="0" left="110" fontSize="14"/>
							<s:Label  id="minLabel" verticalCenter="0" left="120" fontSize="14"/>
						</s:Group>
					</s:Group>
					<!-- USERS -->
					<s:Group height="100%" width="40%">
						<s:Button  id="buttonAddUser" left="5" right="5" top="5" enabled.normal="false" enabled.normalEditable="true">
							<s:label>Ajouter une utilisateur</s:label>
						</s:Button>
						<s:Scroller left="5" right="5" top="30" bottom="5" height="100%" width="100%">
							<s:Group id="groupUser">
								<s:layout>
									<s:VerticalLayout gap="5" />
								</s:layout>
							</s:Group>
						</s:Scroller>
					</s:Group>
				</s:HGroup>
			</s:Group>
			<controls:SessionPlanEdit  id="sessionPlanEdit" width="96%" height="60%" horizontalCenter="0" backgroundColor.normal="#FFFFFF" backgroundColor.normalEditable="#FFFFFF"/>
		</s:VGroup>
	</s:Panel>
</s:Skin>
