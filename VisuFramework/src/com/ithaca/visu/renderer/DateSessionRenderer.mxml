<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    focusEnabled="true">
    <fx:Script>
    <![CDATA[
        import com.ithaca.utils.UtilFunction;
        import com.lyon2.controls.utils.TimeUtils;
        
        import gnu.as3.gettext.FxGettext;
        import gnu.as3.gettext._FxGettext;
        
        
        [Bindable]
        private var fxgt: _FxGettext = FxGettext;
        
        override public function set data(value:Object):void 
        {
            super.data = value;
            if (value != null) 
            {
                var dateStartRecordingSession:Date = value.session.date_start_recording;
                labelDay.text = UtilFunction.getDate(dateStartRecordingSession);
                
                labelHour.text = TimeUtils.formatHHMM(dateStartRecordingSession);
                
                vgroupDate.toolTip = UtilFunction.getDate(dateStartRecordingSession) + " "+dateStartRecordingSession.fullYear.toString() + ", "+ TimeUtils.formatHHMM(dateStartRecordingSession);
            }
        } 
    ]]>
    </fx:Script>
    <s:VGroup id="vgroupDate" width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" paddingLeft="3" paddingRight="3" paddingTop="3">
        <s:Label id="labelDay"/>
        <s:Label id="labelHour"/>
    </s:VGroup>
</s:MXDataGridItemRenderer>
