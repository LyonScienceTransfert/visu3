<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    focusEnabled="true">
    <fx:Script>
    <![CDATA[
        import com.ithaca.utils.UtilFunction;
        import com.lyon2.controls.utils.TimeUtils;
        
        import gnu.as3.gettext.FxGettext;
        import gnu.as3.gettext._FxGettext;
        
        
        [Bindable]
        private var fxgt: _FxGettext = FxGettext;
        
        override public function set data(value:Object):void 
        {
            super.data = value;
            if (value != null) 
            {
                var dateModifyBilan:Date = value.modifyDateAsDate as Date;
                labelDayHour.text = UtilFunction.getDate(dateModifyBilan)+ ", " + TimeUtils.formatHHMM(dateModifyBilan);;
                
                vgroupDate.toolTip = UtilFunction.getDate(dateModifyBilan) + " "+dateModifyBilan.fullYear.toString() + ", "+ TimeUtils.formatHHMM(dateModifyBilan); 
            }
        } 
    ]]>
    </fx:Script>
    <s:VGroup id="vgroupDate" width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" paddingLeft="3" paddingRight="3" paddingBottom="3" paddingTop="3">
        <s:Label id="labelDayHour"/>
    </s:VGroup>
</s:MXDataGridItemRenderer>
