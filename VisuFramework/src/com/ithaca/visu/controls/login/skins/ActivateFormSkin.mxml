<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    creationComplete="skin1_creationCompleteHandler(event)"
     width="300">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.ithaca.visu.controls.login.ActivateForm")]
    </fx:Metadata>
    <fx:Script>
    <![CDATA[

        
        import mx.events.FlexEvent;
       
        protected function skin1_creationCompleteHandler(event:FlexEvent):void
        {
          
        }

    ]]>
    </fx:Script>
    <s:states>
        <s:State name="checkActivatedKey" />
        <s:State name="activated" />
        <s:State name="errorActivatedKey" />
        <s:State name="working" />
    </s:states>
    <s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
        <s:VGroup includeIn="activated" width="100%" height="100%"  gap="25" fontSize="14" fontWeight="bold">
            <s:Label id="labelInfo" width="100%" textAlign="center"/>
            <s:HGroup width="100%" verticalAlign="middle">
                <s:TextInput id="passwordText" displayAsPassword="true"  width="100%" />
                <s:Button id="submitButton"/>
            </s:HGroup> 
        </s:VGroup>
        <s:VGroup  includeIn="checkActivatedKey" width="100%" height="100%" verticalAlign="middle">
            <s:HGroup  height="100%" verticalAlign="middle">
                <mx:Image id="imageCheck" width="80" height="60" />
                <s:Label id="labelCheck"/>
            </s:HGroup>
        </s:VGroup>
        <s:HGroup width="300" includeIn="errorActivatedKey" >
            <s:Label id="lebelErrorActivatedKey" />
        </s:HGroup>
        <s:HGroup includeIn="working" width="100%" height="100%">
            <s:Label id="labelWorking"/>
        </s:HGroup>
    </s:HGroup>
</s:Skin>
