<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		preinitialize="skin1_preinitializeHandler(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.controls.sessions.SharedElementChat")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			protected function skin1_preinitializeHandler(event:FlexEvent):void
			{
				fullColorGradientExit.color = this.hostComponent.backGroundColor;
			}

		]]>
	</fx:Script>
	<!-- states -->
	<s:states>
		<s:State name="normal" />
		<s:State name="vciel"/>
	</s:states>
	<s:Group width="100%" >				
		<s:Rect top="0" left="1" right="1" top.normal="0" left.normal="1" bottom="-2" right.normal="1">
			<s:stroke>
				<s:LinearGradientStroke rotation="90">
					<s:GradientEntry color="#CCCCCC" />
					<s:GradientEntry color="#999999" />
				</s:LinearGradientStroke>
			</s:stroke>
			<s:fill>
				<s:LinearGradient rotation="90">					
					<s:GradientEntry color="#FFFFFF" />						
					<s:GradientEntry id="fullColorGradientExit"/>						
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<mx:Image id="avatar"  left="3" top="1" width="30" height="30"/>
		<s:Label id="nameUser"  maxDisplayedLines="1" visible.vciel="true" visible.normal="false" top="5" left="40"  width="90"/>
		<mx:Image id="imageInfo" left.normal="44"  left.vciel="135" top="5" maxWidth="25" maxHeight="25"/>
		<s:RichEditableText id="titleDisplay" left.normal="72" left.vciel="40" top.normal="5" top.vciel="30" right="10" color="#121212"
				 fontSize="12" fontWeight="normal" 
                 editable="false" selectable="true" selectionHighlighting="always" right.normal="10" backgroundAlpha="0.0">
		</s:RichEditableText>
	</s:Group>
	
	
</s:Skin>
