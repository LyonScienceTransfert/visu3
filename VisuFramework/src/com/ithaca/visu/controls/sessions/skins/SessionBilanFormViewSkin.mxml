<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.controls.sessions.SessionBilanFormView")]
	</fx:Metadata>
    <fx:Script>
    <![CDATA[
        import gnu.as3.gettext.FxGettext;
        import gnu.as3.gettext._FxGettext;
        
        import mx.events.FlexEvent;
        
        import spark.events.IndexChangeEvent;
        
        
        [Bindable]
        private var fxgt: _FxGettext = FxGettext;
    ]]>
    </fx:Script>
	<mx:Form width="100%" paddingLeft="5" paddingRight="5" 
			 paddingTop="5" paddingBottom="5">
		
		<mx:FormItem label="Participants:" width="100%">
			<s:Label id="labelListRecordedUser" width="100%" text="Tom Smith (tuteur), John Black (étudiant), Jane White (étudiant)"/>
		</mx:FormItem>
		
		<mx:FormItem label="Manquants:" width="100%">
			<s:Label  id="labelListAbsentUser" width="100%" text="Bill Jones (étudiant)"/>
		</mx:FormItem>
		
		<mx:FormItem label="Date de début:" width="100%">
			<s:Label  id="labelDateDebut" width="100%" text="25 Fév. 2011, à 15:03"/>
		</mx:FormItem>
		
		<mx:FormItem label="Durée:" width="100%">
			<s:Label id="labelDuration" width="100%" text="1 h 27"/>
		</mx:FormItem>
		
		<mx:FormItem label="Bilans existants:" width="100%">
			<s:VGroup width="100%" horizontalAlign="left"  paddingTop="4">
				<s:Label id="labelBilan" width="100%" text="(Liste interactive des bilans, à maquetter avec le composant 'Liste des bilans')"/>
				<mx:LinkButton id="linkButtonGoSalonBilan" includeInLayout="false" visible="false" color="#0000FF" fontWeight="bold" toolTip="Rejoindre le salon de bilan pour cette séance" label="Aller vers bilan" paddingTop="-5"/>
			    <mx:DataGrid id="dataGridBilan" width="100%" height="100%">
                    <mx:columns>
                        <mx:DataGridColumn id="dataFieldCreationDate"  dataField="creationDate" width="120">
                           <mx:headerText>{fxgt.gettext("Date création")}</mx:headerText>
                        </mx:DataGridColumn>
                        <mx:DataGridColumn  dataField="title" >
                           <mx:headerText>{fxgt.gettext("Description")}</mx:headerText>
                        </mx:DataGridColumn>
                        <mx:DataGridColumn   id="datFieldOwnerBilan" dataField="ownerId" width="150" >
                           <mx:headerText>{fxgt.gettext("Propriétaire de bilan")}</mx:headerText>
                        </mx:DataGridColumn>
                    </mx:columns>
                </mx:DataGrid>
            </s:VGroup>
		</mx:FormItem>
		
		<mx:FormItem label="Actions:" width="100%">
			
			<s:HGroup width="100%" horizontalAlign="left">
				<mx:LinkButton id="linkButtonGoSalonRetrospection" color="#0000FF" fontWeight="bold" toolTip="Rejoindre le salon de rétrospection pour cette séance" label="Aller vers rétrospection" paddingTop="-5"/>
			</s:HGroup>
			
		</mx:FormItem>
	</mx:Form>

</s:Skin>
