<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:layout="sparks.layout.*" xmlns:layout1="com.lyon2.controls.sparks.layout.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.controls.sessions.SessionPlan")]
	</fx:Metadata>
	
	<!-- SkinParts
	name=keywordGroup, type=spark.components.Group, required=false
	name=activityGroup, type=spark.components.Group, required=false
	-->
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<!-- activity group -->	
	
	<mx:VDividedBox width="100%" height="100%"> 
		<s:Group width="100%" height="80%">
			<s:Rect top="0" left="0" right="0" bottom="0" bottomLeftRadiusX="5" bottomRightRadiusX="5">
				<s:fill>
					<s:SolidColor color="#d1def6" />
				</s:fill>
			</s:Rect>
			<s:Scroller top="0" left="0" right="0" bottom="0">
			<s:Group id="contentGroup">
				<s:layout>
					<s:VerticalLayout gap="0" />
				</s:layout>
			</s:Group>
			</s:Scroller>
		</s:Group>
		
		<!-- keyword group -->
		<s:Group width="100%" 
				 height="25%">
			<s:Rect top="0" left="0" right="0" bottom="0" radiusX="5">
				<s:fill>
					<s:SolidColor color="#EFEFEF" />
				</s:fill>
			</s:Rect>
			<s:Scroller top="5" left="5" right="5" bottom="5">
				<s:Group id="keywordGroup">
					<s:layout>
						<layout1:FlowLayout  horizontalGap="5"   />
					</s:layout>
				</s:Group>
			</s:Scroller>
		</s:Group>
	</mx:VDividedBox>
	
	

	

	
		


</s:Skin>
