<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:layout="sparks.layout.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.visu.controls.sessions.SessionPlan")]
	</fx:Metadata>
	
	<!-- SkinParts
	name=keyWordGroup, type=spark.components.Group, required=false
	name=activityGroup, type=spark.components.Group, required=false
	-->
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<!-- activity group -->
	<s:Group width="100%" height="80%">
		<s:Rect top="0" left="0" right="0" bottom="0" radiusX="8">
			<s:fill>
				<s:SolidColor color="#EFEFEF" />
			</s:fill>
		</s:Rect>
		<s:Group id="contentGroup" 
				 left="5" right="5" top="0"
				 height="80%">
			<s:layout>
				<s:VerticalLayout />
			</s:layout>
		</s:Group>
	</s:Group>
	
	<!-- keyword group -->
	<s:Group width="100%" 
			 height="20%" maxHeight="200">
		<s:Rect top="0" left="0" right="0" bottom="0" radiusX="8">
			<s:fill>
				<s:SolidColor color="#EFEFEF" />
			</s:fill>
		</s:Rect>
		<s:Group id="keyWordGroup" 
				 top="0" left="5" right="5" bottom="0">
			<s:layout>
				<layout:FlowLayout />
			</s:layout>
		</s:Group>
	</s:Group>
</s:Skin>
