<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:skins="com.ithaca.utils.components.skins.*" xmlns:components="com.ithaca.utils.components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.documentarisation.RetroDocumentListItemSimple")]
	</fx:Metadata>
	<fx:Script>
	<![CDATA[
		import com.ithaca.utils.components.skins.IconInfoSegmentSkin;
		import com.ithaca.visu.ui.utils.IconEnum;
	]]>
	</fx:Script>
	<s:VGroup gap="0" width="100%">
		<s:HGroup  left="9" right="3" top="1" bottom="0" minHeight="30" gap="1" horizontalAlign="right" verticalAlign="bottom" 
			paddingBottom="2" paddingLeft="3"> 
			<!-- LABAL RETRODOCUMENT -->
			<s:Label id="labelRetroDocument" maxDisplayedLines="1" lineBreak="toFit" height="100%" maxWidth="220" width="220" minHeight="30"
				fontWeight="normal" verticalAlign="middle" fontSize="14" />
			<!-- LINE HORISONTAL -->
			<s:Line height="100%" right="103">
				<s:stroke>
					<s:SolidColorStroke color="#cccccc" weight="1" joints="miter"/>
				</s:stroke>
			</s:Line>
			<mx:Spacer width="1"/>
			
			<!-- ICON INFO VIDEO -->
			<components:IconInfoSegment id="iconInfoVideo" 
				skinClass="com.ithaca.utils.components.skins.IconInfoSegmentSkin"
				>
			</components:IconInfoSegment>
			<!-- ICON INFO AUDIO -->
			<components:IconInfoSegment id="iconInfoAudio"  
				skinClass="com.ithaca.utils.components.skins.IconInfoSegmentSkin"
				>
			</components:IconInfoSegment>
			<mx:PopUpButton id="buttonAction" icon="{IconEnum.getIconByName('iconOption_16x16')}" width="36" height="16" >	
				<mx:buttonMode>true</mx:buttonMode>
			</mx:PopUpButton>
			<mx:Spacer width="1"/>
		</s:HGroup>
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="#cccccc" weight="1" joints="miter"/>
			</s:stroke>
		</s:Line>
	</s:VGroup>
</s:Skin>
