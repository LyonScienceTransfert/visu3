<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ithaca.documentarisation.RetroDocumentView")]
	</fx:Metadata>
	<s:states>
		<s:State name="normal" />
		<s:State name="edited" />	
	</s:states>
	<fx:Script>
		<![CDATA[
			import com.ithaca.visu.ui.utils.IconEnum;
			import com.ithaca.visu.ui.utils.SharedSatusEnum;
		]]>
	</fx:Script>
	<!-- SkinParts
	name=titleDocument, type=spark.components.Label, required=false
	name=groupSegment, type=spark.components.Group, required=false
	name=addButton, type=spark.components.Button, required=false
	name=shareButton, type=spark.components.Button, required=false
	name=titleDocumentTextInput, type=spark.components.TextInput, required=false
	name=removeButton, type=spark.components.Button, required=false
	-->
	<s:Rect id="background" left="0" right="0" top="0" bottom="0">
		<s:fill>
			<!--- @private -->
			<s:SolidColor id="bgFill" color="#ffffff"/>
		</s:fill>
	</s:Rect>
	<s:Group width="100%" height="100%">

		<s:HGroup  top="2" height="35" width="100%" gap="3" verticalAlign="middle">
			<s:Label text="balbla" id="titleDocument" minWidth="100" width="100%" includeIn="normal" fontWeight="bold" paddingLeft="5"/>
			<s:TextInput text="aze" minWidth="100" width="100%" id="titleDocumentTextInput" includeIn="edited" fontSize="12"/>
			<mx:Button icon="{IconEnum.getIconByName('delete')}" id="removeButton" width="30" includeIn="edited"/>
			<mx:Button icon="{IconEnum.getIconByName('retroDocumentShared')}" id="shareButton" enabled="true" width="30" includeIn="edited" visible="true"/>
			<mx:Button icon="{IconEnum.getIconByName('retroDocumentSegemntAdd')}" id="addButton" width="30" includeIn="edited"/>
		</s:HGroup>
		<s:Group top="37" bottom="1" left="0" right="1">
			<s:Scroller top="0"  bottom="0" left="0" right="0">
					<s:Group top="0"  bottom="0" left="0" right="0" id="groupSegment">
						<s:layout>
							<s:VerticalLayout gap="5"/>
						</s:layout>
					</s:Group>
			</s:Scroller>
		</s:Group>
	</s:Group>
</s:Skin>
