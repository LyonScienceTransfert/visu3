<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.ithaca.messagerie.MessageItem")]
    </fx:Metadata>
    <s:states>
        <s:State name="myMessage"/>
        <s:State name="otherMessage"/>
    </s:states>
            <s:Group id="groupItem">
                <s:Group top="0" bottom="0" left="2" right="2" left.myMessage="62">
                    <s:Graphic horizontalCenter="0" verticalCenter="0" left="0" right="0">
                        <s:Rect width="{textMessage.width}" height="{textMessage.height}" radiusX="7" radiusY="7">
                            <s:stroke>
                                <s:SolidColorStroke color.otherMessage="#7eb2d3" color.myMessage="#9ce583" weight="1"/>
                            </s:stroke>
                            <s:fill>
                                <s:RadialGradient>
                                    <s:GradientEntry color.otherMessage="#b8d1e1" color.myMessage="#d6f5cb"/>
                                </s:RadialGradient>
                            </s:fill>
                        </s:Rect>
                    </s:Graphic>
                </s:Group>
                <mx:TextArea id="textMessage" contentBackgroundAlpha="0.0" left.myMessage="60" height="20" width="300" text="textMessage" borderVisible="false" editable="false" verticalScrollPolicy="off"  paddingLeft="3" paddingRight="3"/>
                
                <s:Group bottom="-5" right.otherMessage="-25"  left.myMessage="30" bottom.myMessage="-5">
                    <s:Graphic  horizontalCenter="0" verticalCenter="0">
                        <s:Rect x="2" height="16" width="35" radiusX="5" radiusY="5">                              
                            <s:stroke>
                                <s:SolidColorStroke color="#87bdf0" weight="1"/>
                            </s:stroke>
                            <s:fill>
                                <s:RadialGradient>
                                    <s:GradientEntry color="#badeff" alpha="1.0"/>
                                </s:RadialGradient>
                            </s:fill>
                        </s:Rect>         
                    </s:Graphic>
                    <s:Label id="timeMessage" text="11:54" y="4" x="4" fontStyle="italic" fontSize="11"/>
                </s:Group>
                   
            </s:Group>

    
</s:Skin>
