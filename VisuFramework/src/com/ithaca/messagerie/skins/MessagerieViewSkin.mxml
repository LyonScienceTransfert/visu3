<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:messagerie="com.ithaca.messagerie.*">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.ithaca.messagerie.MessagerieView")]
    </fx:Metadata>
    <s:VGroup width="100%" height="100%">
        <messagerie:TabNavigatorMessagerie id="tabNavigatorMessagerie" width="100%" height="100%"/>
        <s:HGroup width="100%" height="100%">
            <s:Button id="addUser">
                <s:label>Ajouter user</s:label>
            </s:Button>
            <s:TextInput  id="messageToSend" width="100%" />
            <s:Button id="sendMessage"> 
                <s:label>Send</s:label>
            </s:Button>
        </s:HGroup>
    </s:VGroup>
</s:Skin>
