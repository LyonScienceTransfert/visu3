<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" 
		 xmlns:mxNew="library://ns.adobe.com/flex/mx" 
	verticalAlign="middle" 
	paddingLeft="5" paddingRight="5"
	borderSkin="com.lyon2.controls.skins.VideoControlBarSkin" xmlns:controls="com.lyon2.controls.*">

	<mx:Button id="playButton"
		overSkin="com.lyon2.controls.skins.VideoButtonSkin"
		upSkin="com.lyon2.controls.skins.VideoButtonSkin"
		downSkin="com.lyon2.controls.skins.VideoButtonSkin"
		disabledSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedOverSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedUpSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedDownSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedDisabledSkin="com.lyon2.controls.skins.VideoButtonSkin"
		skin="com.lyon2.controls.skins.VideoButtonSkin"
		icon="com.lyon2.controls.icons.PlayIcon"		
		toggle="true"
		width="20" height="20" />
	
	<mx:Label id="playHeadTimeLabel" text="xx:xx"  />

	<mx:HSlider id="playHeadSlider" 
		tickLength="0" tickOffset="0"
		allowTrackClick="false"
		width="100%" showTrackHighlight="true" minWidth="50"
		trackSkin="com.lyon2.controls.skins.VideoSliderTrackSkin"
		trackHighlightSkin="com.lyon2.controls.skins.VideoSliderTrackHighlightSkin"
		thumbUpSkin="com.lyon2.controls.skins.VideoSliderThumbSkin"
		thumbOverSkin="com.lyon2.controls.skins.VideoSliderThumbSkin"
		thumbDownSkin="com.lyon2.controls.skins.VideoSliderThumbSkin"
		thumbDisabledSkin="com.lyon2.controls.skins.VideoSliderThumbSkin"
		thumbSkin="com.lyon2.controls.skins.VideoSliderThumbSkin"
		
		sliderThumbClass="com.lyon2.controls.skins.VideoSliderThumb"
		/>		

	<mx:Label id="durationLabel" text="xx:xx"/>

	<controls:SimplePopupButton id="soundButton"
		width="20" height="20"
		overSkin="com.lyon2.controls.skins.VideoButtonSkin"
		upSkin="com.lyon2.controls.skins.VideoButtonSkin"
		downSkin="com.lyon2.controls.skins.VideoButtonSkin"
		disabledSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedOverSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedUpSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedDownSkin="com.lyon2.controls.skins.VideoButtonSkin"
		selectedDisabledSkin="com.lyon2.controls.skins.VideoButtonSkin"
		icon="com.lyon2.controls.icons.SoundIcon"
		toggle="true" paddingLeft="0" paddingRight="0"
		selected="true">
		<mx:VBox width="20" horizontalAlign="center" backgroundColor="white" >
			<mxNew:VSlider id="soundSlider" value="100" height="80" maximum="100" snapInterval="1" />
		</mx:VBox>
	</controls:SimplePopupButton>
</mx:HBox>
