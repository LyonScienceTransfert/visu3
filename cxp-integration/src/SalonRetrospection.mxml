<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="1024" minHeight="768" skinClass="skins.PageSkin">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Group top="68" width="1024" minHeight="667" horizontalCenter="0">
		
		<!-- container -->
		<s:Group width="1004" height="100%" horizontalCenter="0">
			
			<!-- background -->
			<s:Group width="100%" height="100%">
				<s:Rect width="100%" height="100%" radiusX="5">
					<s:fill>
						<s:SolidColor color="0xffefd1" />
					</s:fill>
				</s:Rect>
				
				<s:Rect width="100%" height="100%" radiusX="5">
					<s:stroke>
						<s:SolidColorStroke color="0x9f9f9f" />
					</s:stroke>
				</s:Rect>
			</s:Group>
			
			<!-- Panneaux -->
			<s:Group width="100%" height="100%" left="2" top="2" right="2" bottom="2">
				
				<mx:HDividedBox width="100%" height="100%">
					
					<!-- Left side -->
					<mx:VDividedBox width="70%" height="100%" minWidth="400">
						
						<!-- Video panel -->
						<s:Group width="100%" height="50%" minHeight="200">
							
							<!-- Header -->
							<s:Group width="100%" height="26">
								<s:Rect width="100%" height="100%" radiusX="5">
									<s:fill>
										<s:LinearGradient rotation="90">
											<s:GradientEntry color="0xfabf30" />
											<s:GradientEntry color="0xffae00" />
										</s:LinearGradient>
									</s:fill>
								</s:Rect>
								<s:Rect width="100%" height="5" bottom="0">
									<s:fill>
										<s:SolidColor color="0xffae00" />
									</s:fill>
								</s:Rect>
								<s:Label left="5" height="26" fontSize="14" fontWeight="bold"
										 text="Titre de la séance enregistrée le 24/04/2012" verticalAlign="middle"/>
								
								<!-- group of buttons -->
								<s:HGroup right="2" gap="2" verticalCenter="0">
									<s:Button skinClass="skins.Components.Button" height="22" width="28" icon="images/Salon/ico_05.png"/>
									<s:Button skinClass="skins.Components.Button" height="22" width="29" icon="images/Salon/ico_screen_zoom.png"/>
									<s:Button skinClass="skins.Components.Button" height="22" width="29" icon="images/Salon/ico_micro.png"/>
								</s:HGroup>
							</s:Group>
							
							<!-- Content -->
							<s:Group width="100%" height="100%" top="26">
								<s:Rect width="100%" height="100%">
									<s:fill>
										<s:LinearGradient rotation="90">
											<s:GradientEntry color="0xffffff" />
											<s:GradientEntry color="0xffeecf" />
										</s:LinearGradient>
									</s:fill>
									<s:stroke>
										<s:SolidColorStroke color="0xffb311" />
									</s:stroke>
								</s:Rect>
								
								<s:Group left="2" right="2" top="2" bottom="2">
									<s:Group horizontalCenter="0" height="100%">
									
										<!-- video display -->
										<s:Group height="100%">
											<s:Image source="http://www.psdgraphics.com/wp-content/uploads/2010/08/webcam.jpg" height="100%" width="340" />
											<s:Button skinClass="skins.Components.Button" height="20" width="21" icon="images/Salon/ico_play.png" top="1" left="3"/>
											<s:HGroup top="1" right="3" height="20">
												<s:Button skinClass="skins.Components.Button" height="20" width="21" icon="images/Salon/ico_sound.png"/>
												<s:Button skinClass="skins.Components.Button" height="20" width="21" icon="images/Salon/ico_write.png"/>
												<s:Button skinClass="skins.Components.Button" height="20" width="21" icon="images/Salon/ico_screen.png"/>
												<!-- User name -->
												<s:Group>
													<s:Group top="3" height="14">
														<s:Rect width="100%" height="100%" radiusX="5">
															<s:fill>
																<s:SolidColor color="0xffaf04" />
															</s:fill>
														</s:Rect>
														<s:HGroup left="3" right="3"
																  verticalAlign="middle"
																  verticalCenter="0">
															<s:Image source="images/Home/ico_user_tuteur.png" />
															<s:Label fontSize="10" text="S.Serguei"
																	 verticalAlign="bottom"/>
														</s:HGroup>
													</s:Group>
												</s:Group>
											</s:HGroup>
										</s:Group>
									
									</s:Group>
								</s:Group>
								
							</s:Group>
						</s:Group>
						
						<!-- Timeline panel -->
						<s:Group width="100%" height="50%" minHeight="150">
							
							<!-- Header -->
							<s:Group width="100%" height="26">
								<s:Rect width="100%" height="100%" radiusX="5">
									<s:fill>
										<s:LinearGradient rotation="90">
											<s:GradientEntry color="0xfabf30" />
											<s:GradientEntry color="0xffae00" />
										</s:LinearGradient>
									</s:fill>
								</s:Rect>
								<s:Rect width="100%" height="5" bottom="0">
									<s:fill>
										<s:SolidColor color="0xffae00" />
									</s:fill>
								</s:Rect>
								<s:Label left="5" height="26" fontSize="14" fontWeight="bold"
										 text="Timeline du salon" verticalAlign="middle"/>
							</s:Group>
							
							<!-- Content -->
							<s:Rect width="100%" height="100%" top="26">
								<s:fill>
									<s:SolidColor color="0xFFFFFF" />
								</s:fill>
								<s:stroke>
									<s:SolidColorStroke color="0xffb311" />
								</s:stroke>
							</s:Rect>
							
						</s:Group>
					</mx:VDividedBox>
					
					
					<!-- Right side -->
					<s:Group width="30%" height="100%" minWidth="280">
						
						<!-- header -->
						<s:Group width="100%" height="26">
							<s:Rect width="100%" height="100%" radiusX="5">
								<s:fill>
									<s:LinearGradient rotation="90">
										<s:GradientEntry color="0xfabf30" />
										<s:GradientEntry color="0xffae00" />
									</s:LinearGradient>
								</s:fill>
							</s:Rect>
							<s:Rect width="100%" height="5" bottom="0">
								<s:fill>
									<s:SolidColor color="0xffae00" />
								</s:fill>
							</s:Rect>
							<s:Label left="5" height="26" fontSize="14" fontWeight="bold"
									 text="Liste des bilans" verticalAlign="middle"/>
							
							<!-- group of buttons -->
							<s:HGroup right="2" gap="2" verticalCenter="0">
								<s:Button skinClass="skins.Components.Button" height="22" width="30" icon="images/Salon/ico_bilan_add.png"/>
							</s:HGroup>
						</s:Group>
						
						<!-- Content -->
						<s:Group width="100%" height="100%" top="26">
							<s:Rect width="100%" height="100%">
								<s:fill>
									<s:SolidColor color="0xFFFFFF" />
								</s:fill>
								<s:stroke>
									<s:SolidColorStroke color="0xffb311" />
								</s:stroke>
							</s:Rect>
							
							<mx:VBox width="100%" height="100%" left="2" right="2" top="5">
								<mx:Box width="100%">
								
									<!-- selected bilan -->
									<s:Group width="100%" height="20">
										<s:Rect width="100%" height="100%">
											<s:fill>
												<s:SolidColor color="0xFFCC5E" />
											</s:fill>
										</s:Rect>
										<s:Group left="5" right="5" width="100%" clipAndEnableScrolling="true">
											<s:Label y="5" text="Bilan sur la séance «Les artistes des années 1920»"/>
										</s:Group>
										<s:HGroup right="5" height="20" gap="2">
											<s:Button skinClass="skins.Components.Button" height="20" width="30" icon="images/Salon/ico_bilan_delete.png"/>
											<s:Button skinClass="skins.Components.Button" height="20" width="20" icon="images/Salon/ico_ppl.png"/>
											<s:Button skinClass="skins.Components.Button" height="20" width="20" icon="images/Salon/ico_view.png"/>
										</s:HGroup>
									</s:Group>
									<!-- bilan -->
									<s:Group width="100%" height="20" clipAndEnableScrolling="true">
										<s:Group left="5" right="5" width="100%" height="20" clipAndEnableScrolling="true">
											<s:Label y="5" text="Bilan sur la séance «Les artistes du siècle des lumières»"/>
										</s:Group>
									</s:Group>
									<!-- bilan -->
									<s:Group width="100%" height="20" clipAndEnableScrolling="true">
										<s:Group left="5" right="5" width="100%" height="20" clipAndEnableScrolling="true">
											<s:Label y="5" text="Bilan sur la séance «Le cinéma vu par les rationnalistes»"/>
										</s:Group>
									</s:Group>
								</mx:Box>

							</mx:VBox>
						
						</s:Group>
					</s:Group>
				</mx:HDividedBox>
				
			</s:Group>
			<!-- Fin Group Panneaux -->
		</s:Group>
		<!-- Fin Group Container -->
	</s:Group>
</s:Application>
