<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				alpha.disabled="0.5"
				enabled="{data.online}">
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<s:HGroup left="5" height="15" top="5">
		<s:Image source="images/Home/ico_user_{data.role}.png" verticalAlign="middle"/>
		<s:Label height="15" text="{data.name}" verticalAlign="middle"/>
	</s:HGroup>
	
</s:ItemRenderer>
