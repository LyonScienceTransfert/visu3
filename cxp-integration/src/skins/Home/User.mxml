<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<s:HGroup left="5" height="17" gap="2"
			  verticalAlign="middle">
		<s:Image source="images/Home/ico_{data.status}.png"/>
		<s:Label fontSize="12" text="{data.name}" color="#373737"
				 verticalAlign="bottom" verticalCenter="0"/>
		<s:Label fontSize="10" text="({data.role})" color="#a6a6a6"
				 verticalAlign="bottom" verticalCenter="0"/>
	</s:HGroup>
	
</s:ItemRenderer>
